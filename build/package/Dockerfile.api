# Build Stage
FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -o /praetor-api ./cmd/api

# Run Stage
FROM alpine:3.19

WORKDIR /

COPY --from=builder /praetor-api /praetor-api

# Install git for project sync
RUN apk add --no-cache git ca-certificates

EXPOSE 8080

USER 1000:1000

CMD ["/praetor-api"]
