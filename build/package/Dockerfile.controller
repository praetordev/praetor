# Build Stage
FROM golang:1.25-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -o /praetor-controller ./cmd/controller

# Run Stage
FROM alpine:3.19

WORKDIR /

COPY --from=builder /praetor-controller /praetor-controller

USER 1000:1000

CMD ["/praetor-controller"]
